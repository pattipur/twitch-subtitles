{
  "manifest_version": 3,
  "name": "Twitch Live Subtitles",
  "version": "1.0.0",
  "description": "Real-time subtitles with English translation for Twitch streams",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://www.twitch.tv/*",
    "https://twitch.tv/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*", "https://twitch.tv/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Twitch Subtitles"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://www.twitch.tv/*", "https://twitch.tv/*"]
    }
  ]
}